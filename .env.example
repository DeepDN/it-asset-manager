# IT Asset Manager Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_PASSWORD=secure-admin-password-123

# Database Configuration
POSTGRES_PASSWORD=secure-database-password-123
DATABASE_URL=postgresql://it_assets_user:${POSTGRES_PASSWORD}@postgres:5432/it_assets_prod

# Redis Configuration
REDIS_PASSWORD=secure-redis-password-123
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=secure-grafana-password-123

# Notification Configuration (optional)
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/uploads
LOG_LEVEL=INFO

# Email Configuration (future use)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
